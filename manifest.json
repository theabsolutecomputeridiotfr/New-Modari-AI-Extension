{
  "manifest_version": 3,
  "name": "ModariAI",
  "version": "1.1.0",
  "description": "Blur distractions. Earn coins. Stay focused.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "*://*/*",
    "https://www.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "925575935390-2uica64h3u8t1r83dmsfjlnk3dbsoj4d.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "coins.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["model.json", "group1-shard1of1.bin"],
      "matches": ["<all_urls>"]
    }
  ]
}
